{% extends "_layouts/main" %}

{% block content %}
        {% set artiesten = craft.entries.section('artiesten').all() %}
        {% set concerten = craft.entries.section('concerten').all() %}
        {% set venues = craft.entries.section('locaties').all() %}
 <div class="container">
    <section id="Concerts">
    <h1>Concerten</h1>
    <div class="flex-container">
        {% for concert in concerten %}
            <div class="item-container">
                <a href="{{ concert.url }}">
                <div class="item-image">
                    {% set concertImage = concert.concertAfbeelding.one() %}
                    {% if concertImage %}
                        {% do concertImage.setTransform('containers') %}
                        <img src="{{ concertImage.url }}" alt="{{ concert.title }}" />
                    {% else %}
                        <img src="path/to/default-concert-image.jpg" alt="{{ concert.title }}" />
                    {% endif %}
                    <div class="overlay"></div>
                </div>
                <div class="item-info">
                    <h2>{{ concert.title }}</h2>
                    {% set locatieEntry = concert.locatie.one() %}
                    <div class="info-flex">
                    <p id="price">â‚¬{{ concert.prijs }}</p>
                    <p><i class="fa-solid fa-location-dot"></i> {{ locatieEntry.naam }}</p>
                    </div>
                </div>
                </a>
            </div>
        {% endfor %}
    </div>
    </section>

    <section id="Venues">
        <h1>Locaties</h1>
        <div class="flex-container">
        {% set venues = craft.entries.section('locaties').all() %}
        {% for venue in venues %}
            <div class="item-container">
                <a href="{{ venue.url }}">
                <div class="item-image">
                    {% set venueImage = venue.locatieAfbeelding.one() %}
                    {% if venueImage %}
                        {% do venueImage.setTransform('containers') %}
                        <img src="{{ venueImage.url }}" alt="{{ venue.title }}" />
                    {% else %}
                        <img src="path/to/default-venue-image.jpg" alt="{{ venue.title }}" />
                    {% endif %}
                    <div class="overlay"></div>
                </div>
                <div class="item-info">
                    <h2>{{ venue.title }}</h2>
                    <p><i class="fa-solid fa-location-dot"></i> {{ venue.adres }}</p>
                </div>
                </a>
            </div>
        {% endfor %}
        </div>
    </section>

    <section id="Artisest">
        <h1>Artiesten</h1>
        <div class="flex-container">
        {% for artiest in artiesten %}
            <div class="item-container">
            <a href="{{ artiest.url }}">
                <div class="item-image">
                    {% set artiestImage = artiest.artiestAfbeelding.one() %}
                    {% if artiestImage %}
                    {% do artiestImage.setTransform('containers') %}
                        <img src="{{ artiestImage.url }}" />
                    {% endif %}
                    <div class="overlay"></div>
                </div>
                <div class="item-info">
                    <h2>{{ artiest.naam }}</h2>
                </div>
            </a>
            </div>
        {% endfor %}
        </div>
    </section>


</div>



{% endblock %}
